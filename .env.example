# .env.example - copy to .env and fill values

# Google (Gmail) OAuth2
GOOGLE_CREDENTIALS_FILE=./credentials.json
GOOGLE_TOKEN_FILE=./token.json

# Microsoft / OneDrive (MSAL)
MSFT_CLIENT_ID=your-microsoft-app-client-id
MSFT_CLIENT_SECRET=           # optional; if empty, device flow will be used
MSFT_TENANT_ID=common
MSAL_TOKEN_FILE=./msal_token.json

# Optional - change defaults
PORT=8000